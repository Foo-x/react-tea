{
  "name": "@foo-x/react-tea",
  "version": "0.2.0",
  "description": "The Elm Architecture for React",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:prettier": "prettier . --check",
    "fmt": "run-s fmt:prettier fmt:eslint",
    "fmt:eslint": "npm run lint:eslint -- --fix",
    "fmt:prettier": "npm run lint:prettier -- --write",
    "prebuild": "node -e 'fs.rmSync(`dist`, {recursive: true, force: true})'",
    "build": "tsc",
    "test": "jest",
    "test:w": "jest --watch",
    "test:c": "jest --coverage",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Foo-x/react-tea.git"
  },
  "author": "Foo-x",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Foo-x/react-tea/issues"
  },
  "homepage": "https://github.com/Foo-x/react-tea#readme",
  "devDependencies": {
    "@swc/core": "^1.4.8",
    "@swc/jest": "^0.2.36",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.70",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "files": [
    "dist"
  ]
}
